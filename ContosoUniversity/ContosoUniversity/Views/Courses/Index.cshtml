@model IEnumerable<ContosoUniversity.Models.Course>

@{
    ViewData["Title"] = "Courses";
}

<h1>Courses</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Course ID
            </th>
            <th>
                Course Title
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Credits)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CourseID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Credits)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department.Name)
            </td>
            <div class="btn-group" role="group" aria-label="Basic example">
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CourseID" class="btn btn-secondary">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.CourseID" class="btn btn-secondary">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.CourseID" class="btn btn-secondary">Delete</a>
                </td>
            </div>
        </tr>
}
    </tbody>
</table>

<p>
    <a asp-action="Create" class="btn btn-outline-primary">Create New</a>
</p>
